<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#FFFFFF">

    <!-- HEADER -->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:elevation="4dp">

        <!-- BOTÓN VOLVER -->
        <ImageView
                android:id="@+id/btnVolver"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/btn_back_bg"
                android:layout_alignParentStart="true"
                android:padding="6dp"
                android:src="@drawable/ic_arrow_back"
                android:layout_marginStart="348dp"/>

        <ImageView
                android:id="@+id/logoKshop"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="Logo KSHOP"
                android:layout_alignParentStart="true"
                android:layout_marginStart="2dp"/>

        <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Módulo de Cupones"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/logoKshop"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp" />

        <ImageView
                android:id="@+id/btnUsuario"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:contentDescription="Usuario"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="61dp"/>

    </RelativeLayout>

    <!-- CONTENIDO -->
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Consulta y administración de cupones registrados en el sistema."
                    android:textColor="#444"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp" />

            <!-- BOTÓN MOSTRAR -->
            <Button
                    android:id="@+id/btnMostrar"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Mostrar Cupones"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#7B42F6"
                    android:padding="10dp"
                    android:textStyle="bold" />

            <LinearLayout
                    android:id="@+id/contenedorCupones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal" />


            <Button
                    android:id="@+id/btnActualizar"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Actualizar Cupón"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#7B42F6"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="15dp" />

        </LinearLayout>
    </ScrollView>

    <!-- FOOTER -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#000000">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="© 2025 K-SHOP - Módulo Clientes"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
