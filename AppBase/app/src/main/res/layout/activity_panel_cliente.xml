<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                tools:context=".usuarios.PanelCliente">

    <!-- ENCABEZADO SUPERIOR -->
    <RelativeLayout
            android:id="@+id/headerCliente"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#FFFFFF"
            android:elevation="6dp"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical">

        <!-- Logo -->
        <ImageView
                android:id="@+id/logoCliente"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@mipmap/logo_kshop"
                android:layout_alignParentStart="true"
                android:contentDescription="Logo KSHOP" />

        <!-- Título -->
        <TextView
                android:id="@+id/txtTituloCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="K-SHOP"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_toEndOf="@id/logoCliente"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true" />

        <!-- Íconos del lado derecho -->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:gravity="center">

            <!-- Productos -->
            <ImageView
                    android:id="@+id/btnProductos"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_productos"
                    android:contentDescription="Ver Productos"
                    android:padding="6dp"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true" />

            <!-- Carrito -->
            <ImageView
                    android:id="@+id/btnCarrito"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_carrito"
                    android:contentDescription="Carrito"
                    android:padding="6dp"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true" />

            <ImageView
                    android:id="@+id/btnPerfil"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_user"
                    android:contentDescription="Usuario"
                    android:padding="6dp"
                    android:clickable="true"
                    android:focusable="true" />
        </LinearLayout>
    </RelativeLayout>

    <!-- SCROLL PRINCIPAL -->
    <ScrollView
            android:id="@+id/scrollCliente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/headerCliente"
            android:layout_above="@+id/footerCliente"
            android:fillViewport="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <!-- SALUDO -->
            <TextView
                    android:id="@+id/tvBienvenida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¡Bienvenido a tu panel, cliente!"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="20dp" />

            <!-- CARDS PRINCIPALES -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:gravity="center">

                <!-- Pedidos -->
                <LinearLayout
                        android:id="@+id/cardPedidos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:background="@drawable/bg_card"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:focusable="true">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/pedidos" />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mis Pedidos"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:padding="8dp" />
                </LinearLayout>

                <!-- Recomendados -->
                <LinearLayout
                        android:id="@+id/cardRecomendados"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:background="@drawable/bg_card"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:focusable="true">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/recomendaciones" />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Promos"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:padding="8dp" />
                </LinearLayout>

                <!-- Ofertas -->
                <LinearLayout
                        android:id="@+id/cardOfertas"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:background="@drawable/bg_card"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:focusable="true">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/ofertas" />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ofertas"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:padding="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- SECCIÓN SOBRE NOSOTROS -->
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sobre nosotros"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="K-SHOP es una tienda de moda moderna donde puedes encontrar lo último en tendencias, calidad y estilo. Nos enfocamos en ofrecerte la mejor experiencia de compra."
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/tienda_cajera"
                    android:contentDescription="Sobre nosotros"
                    android:layout_marginBottom="20dp" />

            <!-- SECCIÓN MÁS OPCIONES -->
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Más opciones para ti"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="2">

                <!-- Soporte -->
                <LinearLayout
                        android:id="@+id/cardSoporte"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="6dp"
                        android:background="@drawable/bg_card"
                        android:clickable="true"
                        android:focusable="true">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/soporte" />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Soporte"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:padding="8dp" />
                </LinearLayout>

                <!-- Contacto -->
                <LinearLayout
                        android:id="@+id/cardContacto"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="6dp"
                        android:background="@drawable/bg_card"
                        android:clickable="true"
                        android:focusable="true">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/contacto" />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Contáctanos"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:padding="8dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- FOOTER -->
    <LinearLayout
            android:id="@+id/footerCliente"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="#000000"
            android:gravity="center">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="© 2025 K-SHOP - Panel Cliente"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>
