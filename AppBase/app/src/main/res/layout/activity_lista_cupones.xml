<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#FFFFFF"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!-- HEADER -->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:elevation="4dp">

        <!-- BOTÓN VOLVER -->
        <ImageView
                android:id="@+id/btnVolver"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="6dp"
                android:src="@drawable/ic_arrow_back"  />

        <ImageView
                android:id="@+id/logoKshop"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="Logo KSHOP"
                android:layout_alignParentStart="true" />

        <TextView
                android:id="@+id/txtListaTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Módulo de Cupones"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/logoKshop"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp" />

        <ImageView
                android:id="@+id/btnUsuario"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="Usuario"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true" />
    </RelativeLayout>

    <!-- TÍTULO -->
    <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de Cupones"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerCupones"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp" />

    <!-- FOOTER -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="#000000">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="© 2025 K-SHOP - Módulo Clientes"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
