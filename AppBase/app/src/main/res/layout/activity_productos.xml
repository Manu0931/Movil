<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                tools:context=".producto.ProductosActivity">

    <!-- Scroll general -->
    <ScrollView
            android:id="@+id/scrollProductos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/footerProductos"
            android:fillViewport="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!-- ENCABEZADO -->
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:padding="12dp"
                    android:elevation="4dp">

                <ImageView
                        android:id="@+id/logoKshop"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@mipmap/logo_kshop"
                        android:contentDescription="Logo KSHOP"
                        android:layout_alignParentStart="true" />

                <TextView
                        android:id="@+id/txtTituloProductos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Módulo de Productos"
                        android:textColor="#000000"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_toEndOf="@id/logoKshop"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp" />

                <ImageView
                        android:id="@+id/btnVolverProductos"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_back"
                        android:contentDescription="Volver"
                        android:padding="6dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:tint="#000000"
                        android:layout_marginEnd="10dp" />
            </RelativeLayout>

            <!-- CONTENIDO PRINCIPAL -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Administra y visualiza los productos disponibles en K-SHOP desde esta sección."
                        android:textColor="#555555"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp" />

                <!-- LISTA DE PRODUCTOS -->
                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/RecyProductos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="vertical"
                        android:layout_marginTop="10dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- FOOTER SIMPLE -->
    <LinearLayout
            android:id="@+id/footerProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#F5F5F5"
            android:padding="12dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="© 2025 KSHOP"
                android:textColor="#888888"
                android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>
