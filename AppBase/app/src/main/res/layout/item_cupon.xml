<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_marginBottom="10dp"
                                   app:cardCornerRadius="12dp"
                                   app:cardElevation="6dp"
                                   android:backgroundTint="#FFFFFF">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

        <!-- INFO DEL CUPÓN -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <TextView
                    android:id="@+id/tvCodigo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Código: ABC123"
                    android:textColor="#212529"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif" />

            <TextView
                    android:id="@+id/tvDescuento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descuento: 20%"
                    android:textColor="#495057"
                    android:textSize="15sp"
                    android:layout_marginTop="4dp" />

            <TextView
                    android:id="@+id/tvFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Válido hasta: 2025-01-30"
                    android:textColor="#198754"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- BOTONES -->
        <LinearLayout
                android:id="@+id/layoutBotones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/btnEditarCupon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_edit"
                    android:contentDescription="Editar cupón"
                    android:padding="6dp"
                    android:tint="#1976D2"
                    android:clickable="true"
                    android:focusable="true" />

            <ImageView
                    android:id="@+id/btnEliminarCupon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_delete"
                    android:contentDescription="Eliminar cupón"
                    android:padding="6dp"
                    android:tint="#D32F2F"
                    android:layout_marginStart="4dp"
                    android:clickable="true"
                    android:focusable="true" />
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
