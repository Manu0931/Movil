<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:fillViewport="true"
            tools:context=".producto.EditarProductoActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- ENCABEZADO -->
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:elevation="4dp">

            <ImageView
                    android:id="@+id/logoKshop"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/logo_kshop"
                    android:contentDescription="Logo KSHOP"
                    android:layout_alignParentStart="true" />

            <TextView
                    android:id="@+id/txtTituloEditar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editar Producto"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/logoKshop"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp" />

            <ImageView
                    android:id="@+id/btnVolverEditar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_back"
                    android:contentDescription="Volver"
                    android:padding="6dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:tint="#000000"
                    android:layout_marginEnd="10dp" />
        </RelativeLayout>

        <!-- FORMULARIO -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFFFFF"
                    android:elevation="4dp"
                    android:radius="16dp"
                    android:padding="16dp"
                    app:cardUseCompatPadding="true">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <!-- Imagen producto -->
                    <ImageView
                            android:id="@+id/imgProducto"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="12dp"

                            android:scaleType="centerCrop"

                            android:contentDescription="Imagen del producto" />

                    <Button
                            android:id="@+id/btnSeleccionarImagen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seleccionar imagen"
                            android:textAllCaps="false"
                            android:backgroundTint="#1976D2"
                            android:textColor="#FFFFFF"
                            android:layout_gravity="center"
                            android:layout_marginBottom="16dp" />

                    <!-- Campos -->
                    <EditText
                            android:id="@+id/etNombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nombre del producto"
                            android:inputType="textPersonName"
                            android:layout_marginBottom="12dp"
                            android:padding="12dp"
                            android:background="@drawable/bg_edittext" />

                    <EditText
                            android:id="@+id/etDescripcion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Descripción"
                            android:inputType="textMultiLine"
                            android:minLines="3"
                            android:layout_marginBottom="12dp"
                            android:padding="12dp"
                            android:background="@drawable/bg_edittext" />

                    <EditText
                            android:id="@+id/etPrecio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Precio"
                            android:inputType="numberDecimal"
                            android:layout_marginBottom="12dp"
                            android:padding="12dp"
                            android:background="@drawable/bg_edittext" />

                    <EditText
                            android:id="@+id/etStock"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Stock"
                            android:inputType="number"
                            android:layout_marginBottom="12dp"
                            android:padding="12dp"
                            android:background="@drawable/bg_edittext" />
                    <EditText
                            android:id="@+id/etIdProveedor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="ID Proveedor"
                            android:inputType="number"
                            android:layout_marginBottom="12dp"
                            android:padding="12dp"
                            android:background="@drawable/bg_edittext" />

                    <EditText
                            android:id="@+id/etEstado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Estado (Activo/Inactivo)"
                            android:inputType="text"
                            android:layout_marginBottom="24dp"
                            android:padding="12dp"
                            android:background="@drawable/bg_edittext" />

                    <Button
                            android:id="@+id/btnActualizarProducto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Actualizar Producto"
                            android:backgroundTint="#1976D2"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:padding="12dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- FOOTER -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="vertical"
                android:background="#000000"
                android:gravity="center"
                android:layout_marginTop="20dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="© 2025 K-SHOP - Editar Producto"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
