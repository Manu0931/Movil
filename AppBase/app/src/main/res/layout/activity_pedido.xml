<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rootPedidos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                tools:context=".Ventas.PedidoActivity">

    <ScrollView
            android:id="@+id/scrollPedidos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/footerPedidos"
            android:fillViewport="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!-- ENCABEZADO -->
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:padding="12dp"
                    android:elevation="4dp">

                <ImageView
                        android:id="@+id/logoKshopPedidos"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@mipmap/logo_kshop"
                        android:contentDescription="Logo KSHOP"
                        android:layout_alignParentStart="true" />

                <TextView
                        android:id="@+id/txtTituloPedidos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pedidos"
                        android:textColor="#000000"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_toEndOf="@id/logoKshopPedidos"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"/>

                <ImageView
                        android:id="@+id/btnCerrarSesionPedidos"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_logout"
                        android:contentDescription="Cerrar sesión"
                        android:padding="6dp"
                        android:clickable="true"
                        android:focusable="true" />
            </RelativeLayout>

            <!-- CONTENIDO -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Consulta, administra y gestiona los pedidos realizados."
                        android:textColor="#555555"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp" />

                <!-- CARD CON LISTA DE PEDIDOS -->
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#FFFFFF"
                        android:elevation="4dp"
                        android:radius="16dp"
                        android:padding="12dp"
                        app:cardUseCompatPadding="true">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Lista de Pedidos"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp"
                                android:gravity="center" />

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#E0E0E0"
                                android:layout_marginBottom="8dp" />

                        <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerPedidos"
                                android:layout_width="match_parent"
                                android:layout_height="400dp"
                                android:scrollbars="vertical"
                                android:padding="8dp" />

                        <!-- progress / mensaje -->
                        <ProgressBar
                                android:id="@+id/progressPedidos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:visibility="gone"
                                style="?android:attr/progressBarStyleLarge"
                                android:layout_marginTop="12dp" />

                        <TextView
                                android:id="@+id/txtErrorPedidos"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#D32F2F"
                                android:textAlignment="center"
                                android:visibility="gone"
                                android:layout_marginTop="12dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- FOOTER -->
    <LinearLayout
            android:id="@+id/footerPedidos"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="#000000"
            android:gravity="center">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="© 2025 K-SHOP - Módulo Pedidos"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>
