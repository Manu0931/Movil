<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
								   xmlns:app="http://schemas.android.com/apk/res-auto"
								   android:layout_width="match_parent"
								   android:layout_height="wrap_content"
								   android:layout_marginBottom="10dp"
								   app:cardCornerRadius="12dp"
								   app:cardElevation="6dp"
								   android:backgroundTint="#FFFFFF">

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="16dp">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:padding="16dp">

			<TextView
					android:id="@+id/tvNombre"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Nombre del empleado"
					android:textColor="#212529"
					android:textSize="18sp"
					android:textStyle="bold"
					android:fontFamily="sans-serif" />

			<TextView
					android:id="@+id/tvCargo"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Cargo: Vendedor"
					android:textColor="#495057"
					android:textSize="15sp"
					android:layout_marginTop="4dp" />

			<TextView
					android:id="@+id/tvEstado"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Estado: Activo"
					android:textColor="#198754"
					android:textStyle="bold"
					android:textSize="14sp"
					android:layout_marginTop="4dp" />

		</LinearLayout>
		<LinearLayout
				android:id="@+id/layoutBotones"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentEnd="true"
				android:layout_centerVertical="true"
				android:orientation="horizontal">

			<ImageView
					android:id="@+id/btnEditarEmpleado"
					android:layout_width="36dp"
					android:layout_height="36dp"
					android:src="@drawable/ic_edit"
					android:contentDescription="Editar empleado"
					android:padding="6dp"
					android:tint="#1976D2"
					android:clickable="true"
					android:focusable="true" />

			<ImageView
					android:id="@+id/btnEliminarEmpleado"
					android:layout_width="36dp"
					android:layout_height="36dp"
					android:src="@drawable/ic_delete"
					android:contentDescription="Eliminar empleado"
					android:padding="6dp"
					android:tint="#D32F2F"
					android:clickable="true"
					android:focusable="true"
					android:layout_marginStart="4dp" />
		</LinearLayout>
	</RelativeLayout>
</androidx.cardview.widget.CardView>

