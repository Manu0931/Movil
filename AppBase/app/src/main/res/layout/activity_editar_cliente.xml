<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:fillViewport="true"
            tools:context=".clientes.EditarClientesActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- ENCABEZADO -->
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:elevation="4dp">

            <ImageView
                    android:id="@+id/logoKshop"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/logo_kshop"
                    android:contentDescription="Logo KSHOP"
                    android:layout_alignParentStart="true" />

            <TextView
                    android:id="@+id/txtTituloEditar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editar Cliente"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/logoKshop"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp" />

            <ImageView
                    android:id="@+id/btnVolverCliente"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_back"
                    android:contentDescription="Volver"
                    android:padding="6dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:tint="#000000"
                    android:layout_marginEnd="10dp" />
        </RelativeLayout>

        <!-- FORMULARIO -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFFFFF"
                    android:elevation="4dp"
                    android:radius="16dp"
                    android:padding="16dp"
                    app:cardUseCompatPadding="true">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <EditText
                            android:id="@+id/etNombreCliente"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nombre"
                            android:inputType="textPersonName"
                            android:layout_marginBottom="12dp"
                            android:padding="12dp"
                            android:background="@drawable/bg_edittext" />

                    <EditText
                            android:id="@+id/etCorreoCliente"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Correo"
                            android:inputType="textEmailAddress"
                            android:layout_marginBottom="12dp"
                            android:padding="12dp"
                            android:background="@drawable/bg_edittext" />

                    <EditText
                            android:id="@+id/etContrasenaCliente"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Contraseña"
                            android:inputType="textPassword"
                            android:layout_marginBottom="12dp"
                            android:padding="12dp"
                            android:background="@drawable/bg_edittext" />

                    <EditText
                            android:id="@+id/etEstadoCliente"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Estado (Activo / Inactivo)"
                            android:inputType="text"
                            android:layout_marginBottom="12dp"
                            android:padding="12dp"
                            android:background="@drawable/bg_edittext" />

                    <EditText
                            android:id="@+id/etDocumentoCliente"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Documento"
                            android:inputType="text"
                            android:layout_marginBottom="12dp"
                            android:padding="12dp"
                            android:background="@drawable/bg_edittext" />

                    <EditText
                            android:id="@+id/etTelefonoCliente"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Teléfono"
                            android:inputType="phone"
                            android:layout_marginBottom="24dp"
                            android:padding="12dp"
                            android:background="@drawable/bg_edittext" />

                    <Button
                            android:id="@+id/btnActualizarCliente"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Actualizar Cliente"
                            android:backgroundTint="#1976D2"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:padding="12dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- FOOTER -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="vertical"
                android:background="#000000"
                android:gravity="center"
                android:layout_marginTop="20dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="© 2025 K-SHOP - Editar Cliente"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
