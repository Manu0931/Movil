<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF">

    <ScrollView
            android:id="@+id/scrollEnvios"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/footerEnvios"
            android:fillViewport="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!-- ENCABEZADO -->
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:padding="12dp"
                    android:elevation="4dp">

                <ImageView
                        android:id="@+id/logoKshop"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@mipmap/logo_kshop"
                        android:contentDescription="Logo KSHOP"
                        android:layout_alignParentStart="true" />

                <TextView
                        android:id="@+id/txtTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ventas"
                        android:textColor="#000000"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_toEndOf="@id/logoKshop"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"/>

                <ImageView
                        android:id="@+id/btnCerrarSesion"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_logout"
                        android:contentDescription="Cerrar sesión"
                        android:padding="6dp"
                        android:clickable="true"
                        android:focusable="true" />
            </RelativeLayout>

            <!-- CONTENIDO -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="518dp"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Administra los pedidos y envíos realizados en K-SHOP de forma rápida y organizada."
                        android:textColor="#555555"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:layout_marginBottom="24dp"/>

                <!-- Card Pedidos -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_card"
                        android:padding="16dp"
                        android:layout_marginBottom="16dp">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gestión de Pedidos"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:layout_marginBottom="8dp"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:weightSum="3">

                        <Button
                                android:id="@+id/btnConsultarPedidos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Consultar"
                                android:textAllCaps="false"
                                android:layout_margin="4dp"/>

                        <Button
                                android:id="@+id/btnAgregarPedido"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Agregar"
                                android:textAllCaps="false"
                                android:layout_margin="4dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Card Envíos -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_card"
                        android:padding="16dp">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gestión de Envíos"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:layout_marginBottom="8dp"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:weightSum="3">

                        <Button
                                android:id="@+id/btnConsultarEnvios"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Consultar"
                                android:textAllCaps="false"
                                android:layout_margin="4dp"/>

                        <Button
                                android:id="@+id/btnAgregarEnvio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Agregar"
                                android:textAllCaps="false"
                                android:layout_margin="4dp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- FOOTER -->
    <LinearLayout
            android:id="@+id/footerEnvios"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="#000000"
            android:gravity="center">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="© 2025 K-SHOP - Módulo Envíos y Pedidos"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>
