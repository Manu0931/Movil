<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="12dp"
              android:background="#FFFFFF"
              android:layout_marginBottom="10dp"
              android:elevation="2dp">

    <!-- Ícono del estado del envío -->
    <ImageView
            android:id="@+id/imgStatusEnvio"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_shipping"
            android:layout_marginEnd="12dp"
            android:contentDescription="Estado del envío" />

    <!-- Contenido de texto -->
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

        <TextView
                android:id="@+id/tvDireccionEnvio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dirección: Calle 123 #45-67"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/tvFechaEnvio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha: 2025-01-01"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

        <TextView
                android:id="@+id/tvMetodoEnvio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Método: Terrestre"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

        <TextView
                android:id="@+id/tvEstadoEnvio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendiente"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />
    </LinearLayout>

</LinearLayout>
