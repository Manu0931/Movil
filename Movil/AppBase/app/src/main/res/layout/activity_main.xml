<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
												   xmlns:app="http://schemas.android.com/apk/res-auto"
												   xmlns:tools="http://schemas.android.com/tools"
												   android:id="@+id/main"
												   android:layout_width="match_parent"
												   android:layout_height="match_parent"
												   android:background="#FFFFFF"
												   tools:context=".MainActivity">

	<!-- Barra superior -->
	<LinearLayout
			android:id="@+id/topBar"
			android:layout_width="0dp"
			android:layout_height="60dp"
			android:background="#0D6EFD"
			android:gravity="center"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent">

		<TextView
				android:id="@+id/titulo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Registro de Empleado"
				android:textColor="#FFFFFF"
				android:textSize="20sp"
				android:textStyle="bold"
				android:fontFamily="sans-serif-medium" />
	</LinearLayout>

	<!-- Contenedor de formulario -->
	<ScrollView
			android:layout_width="0dp"
			android:layout_height="0dp"
			app:layout_constraintTop_toBottomOf="@id/topBar"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:padding="24dp"
				android:gravity="center_horizontal">

			<!-- Campo nombre -->
			<EditText
					android:id="@+id/nombre"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="Nombre completo"
					android:background="@drawable/edittext_background"
					android:padding="12dp"
					android:layout_marginBottom="12dp"
					android:inputType="textPersonName" />

			<!-- Campo cargo -->
			<EditText
					android:id="@+id/cargo"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="Cargo"
					android:background="@drawable/edittext_background"
					android:padding="12dp"
					android:layout_marginBottom="12dp" />

			<!-- Campo correo -->
			<EditText
					android:id="@+id/correo"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="Correo electrónico"
					android:background="@drawable/edittext_background"
					android:padding="12dp"
					android:layout_marginBottom="12dp"
					android:inputType="textEmailAddress" />

			<!-- Campo contraseña -->
			<EditText
					android:id="@+id/contrasena"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="Contraseña"
					android:background="@drawable/edittext_background"
					android:padding="12dp"
					android:layout_marginBottom="12dp"
					android:inputType="textPassword" />

			<!-- Campo estado -->
			<EditText
					android:id="@+id/estado"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="Estado (Activo / Inactivo)"
					android:background="@drawable/edittext_background"
					android:padding="12dp"
					android:layout_marginBottom="20dp" />

			<!-- Botón registrar -->
			<Button
					android:id="@+id/btnGuardarEmpleado"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Registrar Empleado"
					android:onClick="crearEmpleado"
					android:textColor="#FFFFFF"
					android:textStyle="bold"
					android:backgroundTint="#0D6EFD"
					android:layout_marginBottom="12dp"
					android:paddingVertical="12dp" />

			<!-- Botón ver empleados -->
			<Button
					android:id="@+id/btnVerEmpleados"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Ver Empleados"
					android:onClick="abrirEmpleados"
					android:textColor="#0D6EFD"
					android:textStyle="bold"
					android:backgroundTint="#FFFFFF"
					android:background="@drawable/btn_outline_blue"
					android:paddingVertical="12dp" />
		</LinearLayout>
	</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
